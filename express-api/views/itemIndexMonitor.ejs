<%- include('header') %>
        <!-- Header-->
        <header class="pt-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center">
                    <h1 class="display-4 fw-bolder">Monitors</h1>
                    <!-- <p class="lead fw-normal text-white-50 mb-0"></p> -->
                </div>
            </div>
        </header>
        <!-- Section-->
        <main>
            <section>
                <div class="container mt-5">
                    <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
                        <div>
                            <a href="/items/icats" class="btn btn-primary">Back</a>
                        </div>
                        <div>
                            <a href="/items/new" class="btn btn-primary">Create New Item</a>
                        </div>
                    </div>
                    <% data.forEach(function(item) { %>
                        <div class="full-width">
                            <div class="card custom-card">
                                <img class="card-img-top py-2 px-2" src="<%= assetPath %><%= item.imagepath %>" alt="Product Image" style="max-height: 400px; max-width: 300px;" />
                                <div class="card-body p-4">
                                    <h6 class="card-text mb-1">Item ID: <%= item.id %></h6>
                                    <p class="card-title mb-1"><%= item.manufacturer %></p>
                                    <h5 class="fw-bolder" id="<%= item.id %>Name"><%= item.item_name %></h5>
                                    <p class="card-title mb-1"><%= item.category %></p>
                                    <p class="card-text mb-1" id="<%= item.id %>Price"><%= item.price %></p>
                                </div>
                                <div class="p-4 pt-0 border-top-0 bg-transparent d-flex justify-content-between align-items-center">
                                    <div> <!-- Empty div for spacing -->
                                    </div>
                                    <div>
                                        <div class="add-to-cart-section">
                                            <input type="number" class="quantity-input" value='1' id="<%= item.id %>Quant" name="<%= item.id %>Quant" min="1" step="1">
                                            <a onclick="addToCart('<%= item.id %>');" class="btn btn-outline-dark me-2" href="#">Add</a>
                                        </div>
                                        <div>
                                            <form action="/items/del/<%= item.id %>" method="POST">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="id" value="<%= item.id %>">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                

            </section>
            
        </main>
        <!-- Footer-->
        <footer class="py-5">
            <!-- <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Valley Tech Systems</p></div> -->
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <%- include('footer') %>
    </body>
</html>
